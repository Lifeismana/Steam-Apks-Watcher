<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.valvesoftware.android.steam.community.views.RobotoRegularTextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/secondary_foreground"
        android:id="@+id/label"
        android:background="@color/secondary_background"
        android:paddingLeft="8dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <LinearLayout
        android:background="@color/primary_background"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">
            <com.valvesoftware.android.steam.community.fragment.NetworkImageViewWithBackup
                android:layout_gravity="center"
                android:id="@+id/avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/avatar_frame"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatar_frame_offline"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.valvesoftware.android.steam.community.views.RobotoRegularTextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_foreground"
                android:ellipsize="end"
                android:gravity="bottom"
                android:id="@+id/name"
                android:paddingBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text=""
                android:singleLine="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="19dp">
                <com.valvesoftware.android.steam.community.views.RobotoRegularTextView
                    android:textSize="12sp"
                    android:textColor="@color/primary_foreground"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:id="@+id/groupMembersTotal"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:singleLine="true"/>
                <com.valvesoftware.android.steam.community.views.RobotoRegularTextView
                    android:textSize="12sp"
                    android:textColor="@color/online"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:id="@+id/groupMembersOnline"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_action_keyboard_arrow_right"/>
    </LinearLayout>
</LinearLayout>
