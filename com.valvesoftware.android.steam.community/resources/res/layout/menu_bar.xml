<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/title_background"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <Button
        android:layout_gravity="center_vertical"
        android:id="@+id/hamburgerButton"
        android:background="@drawable/ic_action_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:text=" "/>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <com.valvesoftware.android.steam.community.views.RobotoRegularTextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_foreground"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:id="@+id/titleLabel"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:singleLine="true"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/titleNavSearchButton"
            android:background="@drawable/ic_action_search"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:text=" "/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:layout_width="38dp"
        android:layout_height="30dp">
        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/titleNavRefreshButton"
            android:background="@drawable/ic_action_refresh"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:text=" "/>
        <ProgressBar
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/titleProgressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:maxWidth="24dp"
            android:maxHeight="24dp"
            android:indeterminate="true"
            android:minWidth="24dp"
            android:minHeight="24dp"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/titleExtraButton"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
</LinearLayout>
